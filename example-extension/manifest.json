{

  "manifest_version": 2,
  "name": "FirefoxTestExtension",
  "version": "1.0",

  "description": "Tests implementation of Firefox Remote Storage Library",

  "browser_specific_settings": {
    "gecko": {
      "id": "testext@example.com"
    }
  },

  "icons": {
    "48": "icons/icon-48.png"
  },

  "sidebar_action": {
    "default_title": "Test Sidebar",
    "default_panel": "sidebar.html",
    "default_icon": "icons/icon-48.png"
  },

  "permissions": [
    "activeTab",
    "identity",
    "storage",
    "*://accounts.google.com/*",
    "*://www.googleapis.com/*"
  ]

}